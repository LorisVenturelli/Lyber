<!-- sidebar: style can be found in sidebar.less -->
<section class="sidebar">
    <!-- Sidebar user panel -->
    <div class="user-panel">
        <div class="pull-left image">
            <img src="{{ assets.directory }}img/user2-160x160.jpg" class="img-circle" alt="User Image">
        </div>
        <div class="pull-left info">
            <p>{{ user.firstname }} {{ user.lastname }}</p>
            <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
        </div>
    </div>

    <!-- sidebar menu: : style can be found in sidebar.less -->
    <ul class="sidebar-menu">
        <li class="header">MAIN NAVIGATION</li>
        <li class="{% if app.module == 'dashboard' %}active{% endif %}">
            <a href="{{ app.abs_url }}">
                <i class="fa fa-dashboard"></i> <span>Accueil</span>
            </a>
        </li>
        <li class="{% if app.module == 'users' %}active{% endif %}">
            <a href="{{ app.abs_url }}users">
                <i class="fa fa-users"></i> <span>Utilisateurs</span> <small class="label pull-right bg-blue">12</small>
            </a>
        </li>
        <li class="{% if app.module == 'redirects' %}active{% endif %}">
            <a href="{{ app.abs_url }}redirects">
                <i class="fa fa-share"></i> <span>Redirections</span>
            </a>
        </li>
        <li class="{% if app.module == 'logs' %}active{% endif %}">
            <a href="{{ app.abs_url }}logs">
                <i class="fa fa-file-text-o"></i> <span>Logs</span>
                <i class="fa fa-angle-left pull-right"></i>
            </a>
            <ul class="treeview-menu">
                <li><a href="#"><i class="fa fa-circle-o text-red"></i> Erreurs</a></li>
                <li><a href="#"><i class="fa fa-circle-o text-success"></i> Succ√®s</a></li>
                <li><a href="#"><i class="fa fa-circle-o text-yellow"></i> Attentions</a></li>
                <li><a href="#"><i class="fa fa-circle-o text-aqua"></i> Information</a></li>
            </ul>
        </li>
    </ul>
</section>
<!-- /.sidebar -->